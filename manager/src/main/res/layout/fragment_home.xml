<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.topjohnwu.magisk.ui.home.HomeFragment">

    <data>

        <variable
            name="viewModel"
            type="com.topjohnwu.magisk.ui.home.HomeViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/home_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <include layout="@layout/include_appbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_glance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_generic"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/home_magisk"
                style="@style/Widget.Card.Outlined.Tinted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_generic_half"
                android:animateLayoutChanges="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/home_manager"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    invisible="@{!viewModel.loaded}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_generic_half">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Widget.Text.Emphasize.Tinted"
                        pulse="@{viewModel.magiskVersionUpdate}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@{@string/glance_magisk_title(viewModel.magiskVersionUpdate ? @string/update_obsolete : @string/update_current)}"
                        android:textStyle="normal"
                        tools:text="Magisk is up-to-date" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Widget.Text.Caption.Tinted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha=".4"
                        android:text="@{@string/glance_magisk_installed(viewModel.magiskCurrentVersion.version, viewModel.magiskCurrentVersion.versionCode)}"
                        tools:text="Installed: v18.1 (18100)" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Widget.Text.Caption.Tinted"
                        gone="@{!viewModel.magiskVersionUpdate}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha=".4"
                        android:text="@{@string/glance_magisk_update_to(viewModel.magiskUpdateVersion.version, viewModel.magiskUpdateVersion.versionCode)}"
                        tools:text="Update to: v18.1 (18100)" />

                </LinearLayout>

                <ProgressBar
                    style="@style/Widget.Progress"
                    gone="@{!viewModel.loading}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/colorTextTinted" />

            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/Widget.Icon"
                invisibleTY="@{!viewModel.loaded}"
                invisibleTYMaxAlpha="@{viewModel.magiskVersionUpdate ? 1f : 0.4f}"
                android:layout_marginRight="@dimen/margin_generic_half"
                android:alpha=".4"
                android:onClick="@{() -> viewModel.changelogMagiskPressed()}"
                app:layout_constraintBottom_toBottomOf="@+id/home_magisk_install"
                app:layout_constraintRight_toLeftOf="@+id/home_magisk_install"
                app:layout_constraintTop_toTopOf="@+id/home_magisk_install"
                app:srcCompat="@drawable/ic_list"
                app:tint="@color/colorTextTinted" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/home_magisk_install"
                style="@style/Widget.Button.Text"
                invisibleTY="@{!viewModel.loaded}"
                invisibleTYMaxAlpha="@{viewModel.magiskVersionUpdate ? 1f : 0.4f}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                tools:alpha=".4"
                android:onClick="@{() -> viewModel.installMagiskPressed()}"
                android:text="@{viewModel.magiskVersionUpdate ? `Update` : `Install`}"
                android:textColor="@color/colorTextTinted"
                app:layout_constraintRight_toRightOf="@+id/home_magisk"
                app:layout_constraintTop_toBottomOf="@+id/home_magisk"
                tools:text="Install" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/home_manager"
                style="@style/Widget.Card.Outlined.Tinted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_generic_half"
                android:animateLayoutChanges="true"
                app:layout_constraintLeft_toRightOf="@+id/home_magisk"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    invisible="@{!viewModel.loaded}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_generic_half">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Widget.Text.Emphasize.Tinted"
                        pulse="@{viewModel.appVersionUpdate}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{@string/glance_manager_title(viewModel.appVersionUpdate ? @string/update_obsolete : @string/update_current)}"
                        android:textStyle="normal"
                        tools:text="App is up-to-date" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Widget.Text.Caption.Tinted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha=".4"
                        android:text="@{@string/glance_manager_installed(viewModel.appCurrentVersion.version, viewModel.appCurrentVersion.versionCode)}"
                        tools:text="Installed: v18.1 (18100)" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Widget.Text.Caption.Tinted"
                        gone="@{!viewModel.appVersionUpdate}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha=".4"
                        android:text="@{@string/glance_manager_update_to(viewModel.appUpdateVersion.version, viewModel.appUpdateVersion.versionCode)}"
                        tools:text="Update to: v18.1 (18100)" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Widget.Text.Caption.Tinted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha=".4"
                        android:text="@{viewModel.appPackageName}"
                        tools:text="com.topjohnwu.magisk" />

                </LinearLayout>

                <ProgressBar
                    style="@style/Widget.Progress"
                    gone="@{!viewModel.loading}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/colorTextTinted" />

            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/Widget.Icon"
                invisibleTY="@{!viewModel.loaded}"
                invisibleTYMaxAlpha="@{viewModel.appVersionUpdate ? 1f : 0.4f}"
                android:layout_marginRight="@dimen/margin_generic_half"
                android:onClick="@{() -> viewModel.changelogManagerPressed()}"
                app:layout_constraintBottom_toBottomOf="@+id/home_manager_install"
                app:layout_constraintRight_toLeftOf="@+id/home_manager_install"
                app:layout_constraintTop_toTopOf="@+id/home_manager_install"
                app:srcCompat="@drawable/ic_list"
                app:tint="@color/colorTextTinted"
                tools:alpha=".4" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Button.Text"
                invisibleTY="@{!viewModel.loaded}"
                android:id="@+id/home_manager_install"
                invisibleTYMaxAlpha="@{viewModel.appVersionUpdate ? 1f : 0.4f}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                tools:alpha=".4"
                android:onClick="@{() -> viewModel.installManagerPressed()}"
                android:text="@{viewModel.appVersionUpdate ? `Update` : `Install`}"
                android:textColor="@color/colorTextTinted"
                app:layout_constraintRight_toRightOf="@+id/home_manager"
                app:layout_constraintTop_toBottomOf="@+id/home_manager"
                tools:text="Install" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/home_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_hideable="false"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <include
                android:id="@+id/home_sheet_include"
                layout="@layout/include_home_sheet"
                viewModel="@{viewModel}" />

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
