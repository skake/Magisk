<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.topjohnwu.magisk.ui.superuser.SuperuserViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/superuser_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <include layout="@layout/include_appbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/superuser_glance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/superuser_glance_requests_title"
                style="@style/Widget.Text.Emphasize.Tinted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_generic"
                android:paddingRight="@dimen/margin_generic"
                android:text="Superuser Requests"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/superuser_glance_requests"
                dividerAfterLast="@{true}"
                dividerColor="@{@android:color/transparent}"
                dividerSize="@{@dimen/margin_generic}"
                itemBinding="@{viewModel.itemBinding}"
                items="@{viewModel.items}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:layout_marginTop="@dimen/margin_generic"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:padding="@dimen/margin_generic"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintTop_toBottomOf="@+id/superuser_glance_requests_title"
                app:spanCount="2"
                tools:listitem="@layout/item_superuser_request" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_generic"
                android:background="@drawable/bg_gradient_primary"
                android:rotation="180"
                app:layout_constraintTop_toTopOf="@+id/superuser_glance_requests" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/superuser_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_hideable="false"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <include
                android:id="@+id/superuser_sheet_include"
                layout="@layout/include_superuser_sheet"
                viewModel="@{viewModel}" />

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
