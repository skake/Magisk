<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topjohnwu.magisk.ui.log.LogViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/log_parent"
        android:background="@color/colorPrimary">

        <include layout="@layout/include_appbar" />

        <FrameLayout
            android:id="@+id/log_glance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_generic"
            android:paddingTop="@dimen/margin_generic"
            android:paddingRight="@dimen/margin_generic"
            android:paddingBottom="@dimen/margin_generic_double"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Card.Outlined.Tinted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardPreventCornerOverlap="true">

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/log_glance_tabs"
                    android:background="@android:color/transparent"
                    android:minWidth="250dp"
                    app:tabSelectedTextColor="@color/colorAccent"
                    app:tabIndicatorColor="@color/colorAccent"
                    app:tabTextColor="@color/colorTextTinted" />

            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/log_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_hideable="false"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <include
                android:id="@+id/log_sheet_include"
                layout="@layout/include_log_sheet"
                viewModel="@{viewModel}" />

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>